/**
 * Retrieves job descriptions for a specific job title ID
 * @param jobTitleId The ID of the job title
 * @returns Array of JobDescription objects, or relevant fallback descriptions
 */
export function getJobDescriptionsByTitleId(jobTitleId: string): JobDescription[] {
  // If exact match found, return that
  if (jobDescriptions[jobTitleId]) {
    return jobDescriptions[jobTitleId];
  }
  
  // Determine job category for better fallbacks
  const jobCategory = determineJobCategory(jobTitleId);
  
  // Return appropriate descriptions based on category
  switch (jobCategory) {
    case 'technology':
      return jobDescriptions['software-engineer'] || [];
    case 'marketing':
      return jobDescriptions['marketing-manager'] || [];
    case 'project':
      return jobDescriptions['project-manager'] || [];
    case 'management':
    default:
      return jobDescriptions['manager'] || [];
  }

/**
 * Helper function to determine job category from job title ID
 * @param jobTitleId The ID of the job title
 * @returns The determined category
 */
function determineJobCategory(jobTitleId: string): string {
  const titleLower = jobTitleId.toLowerCase();
  
  // Technology related titles
  if (titleLower.includes('developer') || 
      titleLower.includes('engineer') || 
      titleLower.includes('programmer') || 
      titleLower.includes('coding') || 
      titleLower.includes('technical') ||
      titleLower.includes('software') ||
      titleLower.includes('data') ||
      titleLower.includes('system') ||
      titleLower.includes('it') ||
      titleLower.includes('web') ||
      titleLower.includes('network') ||
      titleLower.includes('analyst')) {
    return 'technology';
  }
  
  // Marketing related titles
  if (titleLower.includes('market') || 
      titleLower.includes('brand') || 
      titleLower.includes('communication') || 
      titleLower.includes('social') || 
      titleLower.includes('content') ||
      titleLower.includes('media') ||
      titleLower.includes('creative') ||
      titleLower.includes('design') ||
      titleLower.includes('pr') ||
      titleLower.includes('advertising')) {
    return 'marketing';
  }
  
  // Project management related titles
  if (titleLower.includes('project') || 
      titleLower.includes('product') ||
      titleLower.includes('program') ||
      titleLower.includes('coordinator') ||
      titleLower.includes('scrum') ||
      titleLower.includes('agile') ||
      titleLower.includes('delivery')) {
    return 'project';
  }
  
  // Management related titles
  if (titleLower.includes('manager') || 
      titleLower.includes('director') || 
      titleLower.includes('lead') || 
      titleLower.includes('head') ||
      titleLower.includes('chief') ||
      titleLower.includes('supervisor') ||
      titleLower.includes('executive')) {
    return 'management';
  }
  
  // Default to management
  return 'management';
}

/**
 * Search job descriptions by job title ID and search term
 * @param jobTitleId The ID of the job title
 * @param searchTerm Optional search term to filter descriptions
 * @returns Filtered array of JobDescription objects
 */
export function searchJobDescriptions(jobTitleId: string, searchTerm: string = ''): JobDescription[] {
  const descriptions = getJobDescriptionsByTitleId(jobTitleId);
  
  if (!searchTerm.trim()) {
    return descriptions;
  }
  
  const normalizedSearch = searchTerm.toLowerCase().trim();
  
  return descriptions.filter(desc =>
    desc.content.toLowerCase().includes(normalizedSearch)
  );
}

/**
 * Get recommended job descriptions for a specific job title
 * @param jobTitleId The ID of the job title
 * @returns Array of recommended JobDescription objects
 */
export function getRecommendedJobDescriptions(jobTitleId: string): JobDescription[] {
  const descriptions = getJobDescriptionsByTitleId(jobTitleId);
  return descriptions.filter(desc => desc.isRecommended);
}